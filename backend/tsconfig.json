{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "rootDir": "./",
      "outDir": "./dist",
      "esModuleInterop": true,
      "resolveJsonModule": true,        // <-- required for importing JSON
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"]
  }
  